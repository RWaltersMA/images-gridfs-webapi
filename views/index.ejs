<!DOCTYPE html>
<html>
<head>
    <title>GRIDFS Example</title>
    <link rel="stylesheet" type="text/css" href="css/bootstrap.min.css"/>
    <link rel="stylesheet" type="text/css" href="css/mystyle.css"/>
</head>
<body>
   <div class="container" style="margin-top:10px;">
        <div class="navbar">
            <div class="navbar-inner">
                <a class="brand" href="#">GridFS Photo Storage and Retrieval Demo</a>
                <ul class="nav">
                    <li class="active"><a href="/">View photos</a></li>
                    <li><a href="/new">Upload Photo</a></li>
                </ul>
            </div>
        </div>
        <div class="bs-callout bs-callout-summary">
             <table style="width:50%">
             <tr><td>Number of photos:</td><td><%= Photos.length %></td></tr>
             <tr><td>Total size:</td><td><%= TotalPhotoSize.toFixed(2) %> kb</td></tr>
             </table>
        </div>
        <div class="row">
            <div class="span12">
                <% Photos.forEach(function(photo) { %>
                    <div class="bs-callout bs-callout-info">
                        <h4><a href="/photos/<%= photo.id %>"><%= photo.filename %></a></h4>
                        <table style="width:50%">
                        <tr><td>Description:</td><td><%= photo.description %></td></tr>
                        <tr><td>Length:</td><td><%= photo.length.toFixed(2) %> kb</td></tr>
                        <tr><td>&nbsp;</td><td>&nbsp;</td></tr>
                       <tr><td><a href="/photos/<%= photo.id %>" class="btn btn-default btn-sm">View Photo</a><td><a href="/delete/<%= photo.id %>" class="btn btn-default btn-sm">Delete</a></td></tr>
                       </table>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</body>
</html>